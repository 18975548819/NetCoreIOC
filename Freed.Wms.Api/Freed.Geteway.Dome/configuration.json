//**********************单地址*********************
{
  "Routes": [
    {
      "DownstreamPathTemplate": "/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "10.19.87.203",
          "Port": 8087
        }
      ],
      "UpstreamPathTemplate": "/T8087/{url}", //上游地址模板
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "LoadBalancerOptions": {
          "Type": "RoundRobin" //轮询  LeastConnection-最少连接数的服务器 NoLoadBalance不负载均衡
        }
      }
  ]
}


